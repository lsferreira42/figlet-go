{
  "name": "figlet-go",
  "version": "0.1.1",
  "description": "FIGlet ASCII art text generator - WebAssembly module compiled from Go",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": "./dist/figlet.wasm"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "figlet",
    "ascii",
    "art",
    "text",
    "banner",
    "wasm",
    "webassembly",
    "go",
    "golang"
  ],
  "author": "Leandro Ferreira",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lsferreira42/figlet-go.git"
  },
  "bugs": {
    "url": "https://github.com/lsferreira42/figlet-go/issues"
  },
  "homepage": "https://github.com/lsferreira42/figlet-go#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "esbuild": "^0.20.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}